<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="HeadlessBrowserTestSuite" verbose="1">

	<test name="DropdownTest - Chrome headless">
	<parameter name="browser" value="chromeheadless"></parameter>
	<parameter name="option" value="2"></parameter>
		<classes>
			<class name="com.herokuapp.theinternet.dropdownpagetest.DropdownTest"/>
		</classes>
	</test>
	
	<test name="DropdownTest - firefox headless">
	<parameter name="browser" value="firefoxheadless"></parameter>
	<parameter name="option" value="2"></parameter>	
		<classes>
			<class name="com.herokuapp.theinternet.dropdownpagetest.DropdownTest"/>
		</classes>
	</test>
	
	<test name="DropdownTest - PhantomJS">
	<parameter name="browser" value="phantomjs"></parameter>
	<parameter name="option" value="2"></parameter>	
		<classes>
			<class name="com.herokuapp.theinternet.dropdownpagetest.DropdownTest"/>
		</classes>
	</test>
	
	<test name="DropdownTest - HTMLUnit">
	<parameter name="browser" value="htmlunit"></parameter>
	<parameter name="option" value="2"></parameter>	
		<classes>
			<class name="com.herokuapp.theinternet.dropdownpagetest.DropdownTest"/>
		</classes>
	</test>

</suite>
